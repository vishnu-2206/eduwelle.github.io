<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <meta name="description" content="EduWelle Blog - Insights, Ideas, and Innovations" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap">
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css" />
</head>
<body>
  <!-- Header -->
  <header>
    <img src="/logo.png" alt="EduWelle Labs Logo" class="logo" id="logoTrigger">
    <nav>
      <a href="/">Home</a>
      <a href="/blog/">Blog</a>
    </nav>
    <label class="switch" title="Toggle Dark Mode">
      <input type="checkbox" id="darkToggle">
      <span class="slider"></span>
    </label>
  </header>

  <!-- Preloader -->
  <div id="preloader"><div class="loader"></div></div>

  <!-- Modal Logo Video -->
  <div id="logoModal">
    <video id="logoVideo" muted autoplay playsinline>
      <source src="/logo-reveal.mp4" type="video/mp4" />
      Your browser does not support the video tag.
    </video>
  </div>

  <!-- Main Content -->
  <main class="section" data-aos="fade-up">
    {{ content | safe }}
  </main>

  <!-- Footer -->
  <footer class="footer">
    <p>&copy; 2025 EduWelle Labs. All rights reserved.</p>
    <p>Email: info@eduwelle.com</p>
  </footer>

  <!-- Back to Top -->
  <button id="backToTop" title="Back to Top">â†‘</button>

  <!-- Scripts -->
  <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
  <script>
    AOS.init({ duration: 800, once: true, offset: 100 });

    const toggle = document.getElementById('darkToggle');
    const prefersDark = localStorage.getItem('dark-mode') === 'true';
    if (prefersDark) {
      document.body.classList.add('dark-mode');
      toggle.checked = true;
    }
    toggle.addEventListener('change', () => {
      document.body.classList.toggle('dark-mode');
      localStorage.setItem('dark-mode', toggle.checked);
    });

    window.addEventListener("load", () => {
      document.getElementById("preloader").classList.add("hidden");
    });

    const backToTopBtn = document.getElementById("backToTop");
    window.addEventListener("scroll", () => {
      backToTopBtn.classList.toggle("show", window.scrollY > 300);
    });
    backToTopBtn.addEventListener("click", () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });

    const logo = document.getElementById("logoTrigger");
    const modal = document.getElementById("logoModal");
    const video = document.getElementById("logoVideo");
    logo.addEventListener("click", () => {
      video.src = "/logo-reveal.mp4";
      modal.style.display = "flex";
      video.play();
    });
    video.addEventListener("ended", () => {
      modal.style.display = "none";
      video.pause();
      video.currentTime = 0;
      video.src = "";
    });
  </script>
</body>
</html>
